@model IEnumerable<GoodLuck.Models.Anniversary>

<h1>Anniversaries</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add Anniversary</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Icon</th>
            <th>Message</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.Icon</td>
            <td>@item.Message</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
