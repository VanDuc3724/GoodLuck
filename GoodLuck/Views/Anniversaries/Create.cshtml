@model GoodLuck.Models.Anniversary

<h1>Add Anniversary</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Icon" class="form-label">Icon</label>
        <input asp-for="Icon" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Message" class="form-label"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>
    <h2>Letter</h2>
    <div class="mb-3">
        <label class="form-label" for="letterTitle">Title</label>
        <input name="letterTitle" id="letterTitle" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="letterContent">Content</label>
        <textarea name="letterContent" id="letterContent" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
