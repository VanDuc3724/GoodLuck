@model IEnumerable<GoodLuck.Models.Letter>

<h1>Letters</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">New Letter</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Anniversary</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.Created.ToString("yyyy-MM-dd")</td>
            <td>@item.Anniversary?.Title</td>
        </tr>
}
    </tbody>
</table>
